
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <!-- basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- mobile metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <!-- site metas -->
    <title>Pluto - Responsive Bootstrap Admin Panel Templates</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- site icon -->
    <link rel="icon" href="images/fevicon.png" type="image/png" />
    <!-- bootstrap css -->
    <link rel="stylesheet" href="~/Admin_Template/css/bootstrap.min.css" />
    <!-- site css -->
    <link rel="stylesheet" href="~/Admin_Template/style.css" />
    <!-- responsive css -->
    <link rel="stylesheet" href="~/Admin_Template/css/responsive.css" />
    <!-- color css -->
    <link rel="stylesheet" href="~/Admin_Template/css/colors.css" />
    <!-- select bootstrap -->
    <link rel="stylesheet" href="~/Admin_Template/css/bootstrap-select.css" />
    <!-- scrollbar css -->
    <link rel="stylesheet" href="~/Admin_Template/css/perfect-scrollbar.css" />
    <!-- custom css -->
    <link rel="stylesheet" href="~/Admin_Template/css/custom.css" />
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="dashboard dashboard_1">
    <div class="full_container">
        <div class="inner_container">
            <!-- Sidebar  -->
            <nav id="sidebar">
                <div class="sidebar_blog_1">
                    <div class="sidebar-header">
                        <div class="logo_section">
                            <a href="index.html"><img class="logo_icon img-responsive" src="~/Admin_Template/images/logo/logo_icon.png" alt="#" /></a>
                        </div>
                    </div>
                    <div class="sidebar_user_info">
                        <div class="icon_setting"></div>
                        <div class="user_profle_side">
                            <div class="user_img"><img class="img-responsive" src="~/Admin_Template/images/layout_img/user_img.jpg" alt="#" /></div>
                            <div class="user_info">
                                <h6>John David</h6>
                                <p><span class="online_animation"></span> Online</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="sidebar_blog_2">
                    <h4>General</h4>
                    <ul class="list-unstyled components">

                        <li><a href="/Blog/AdminBlog/"><i class="fa fa-clock-o orange_color"></i> <span>BLOGLAR</span></a></li>
                        @if (User.IsInRole("A"))
                        {
                            <li><a href="/Author/Index/"><i class="fa fa-table purple_color2"></i> <span>YAZARLAR</span></a></li>
                        }


                        <li>
                            <a href="#element" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><i class="fa fa-envelope purple_color"></i> <span>YORUMLAR</span></a>
                            <ul class="collapse list-unstyled" id="element">
                                <li><a href="/Comment/CommentListTrue/"><span>Onaylanan Yorumlar</span></a></li>
                                <li><a href="/Comment/CommentListFalse/"> <span>Onaylanmamış Yorumlar</span></a></li>

                            </ul>
                        </li>
                        <li>
                            <a href="/Category/AdminCategoryList/">
                                <i class="fa fa-paper-plane red_color"></i> <span>KATEGORİLER</span>
                            </a>
                        </li>
                        <li class="active">
                            <a href="/About/AdminAboutList/"><i class="fa fa-clone yellow_color"></i><span> HAKKIMIZDA</span></a>

                        </li>


                        <li>
                            <a href="#message" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><i class="fa fa-envelope purple_color"></i> <span>MESAJLAR</span></a>
                            <ul class="collapse list-unstyled" id="message">
                               
                                <li><a href="/Message/AdminContactList/"> <span>GELEN MESAJLAR</span></a></li>

                            </ul>
                        </li>
                        <li><a href="map.html"><i class="fa fa-map purple_color2"></i> <span>İLETİŞİM</span></a></li>
                     
                        <li><a href="settings.html"><i class="fa fa-sign-out red_color"></i> <span>ÇIKIŞ YAP</span></a></li>
                    </ul>
                </div>
            </nav>
            <!-- end sidebar -->
            <!-- right content -->
            <div id="content">
                <!-- topbar -->
                <div class="topbar">
                    <nav class="navbar navbar-expand-lg navbar-light">
                        <div class="full">
                            <button type="button" id="sidebarCollapse" class="sidebar_toggle"><i class="fa fa-bars"></i></button>
                            <div class="logo_section">
                                <a href="index.html"><img class="img-responsive" src="~/Admin_Template/images/logo/logo.png" alt="#" /></a>
                            </div>
                            <div class="right_topbar">
                                <div class="icon_info">
                                 
                                    <ul class="user_profile_dd">
                                        <li>
                                            <a class="dropdown-toggle" data-toggle="dropdown"><img class="img-responsive rounded-circle" src="/Admin_Template/images/layout_img/user_img.jpg" alt="#" /><span class="name_user">John David</span></a>
                                            <div class="dropdown-menu">
                                              
                                                <a class="dropdown-item" href="#"><span>Log Out</span> <i class="fa fa-sign-out"></i></a>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
                <!-- end topbar -->
                <!-- dashboard inner -->
                <div class="midde_cont">
                    <div class="container-fluid">
                       @RenderBody()
                    </div>
                    <!-- footer -->
                    <div class="container-fluid">
                        <div class="footer">
                            <p>
                                Copyright © 2023 Tüm Hakları Saklıdır.<br><br>
                                Web Sitesini Yapan: <a href="#">EMKA</a>
                            </p>
                        </div>
                    </div>
                </div>
                <!-- end dashboard inner -->
            </div>
        </div>
    </div>
    <!-- jQuery -->
    <script src="~/Admin_Template/js/jquery.min.js"></script>
    <script src="~/Admin_Template/js/popper.min.js"></script>
    <script src="~/Admin_Template/js/bootstrap.min.js"></script>
    <!-- wow animation -->
    <script src="~/Admin_Template/js/animate.js"></script>
    <!-- select country -->
    <script src="~/Admin_Template/js/bootstrap-select.js"></script>
    <!-- owl carousel -->
    <script src="~/Admin_Template/js/owl.carousel.js"></script>
    <!-- chart js -->
    <script src="~/Admin_Template/js/Chart.min.js"></script>
    <script src="~/Admin_Template/js/Chart.bundle.min.js"></script>
    <script src="~/Admin_Template/js/utils.js"></script>
    <script src="~/Admin_Template/js/analyser.js"></script>
    <!-- nice scrollbar -->
    <script src="~/Admin_Template/js/perfect-scrollbar.min.js"></script>
    <script>var ps = new PerfectScrollbar('#sidebar');</script>
    <!-- custom js -->
    <script src="~/Admin_Template/js/custom.js"></script>
    <script src="~/Admin_Template/js/chart_custom_style1.js"></script>
</body>
</html>