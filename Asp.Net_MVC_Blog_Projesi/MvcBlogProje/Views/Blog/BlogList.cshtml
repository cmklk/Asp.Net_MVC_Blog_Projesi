@using PagedList
@using PagedList.Mvc
@model IEnumerable<EntityLayer.Concrete.Blog>
    @{ string color = "";}
<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12">
                <h2>Recent Posts</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var x in Model)
            {

                if (x.Category.CategoryName == "SPOR")
                {
                    color = "post-category text-white bg-secondary mb-3";
                }

                if (x.Category.CategoryName == "YAZILIM")
                {
                    color = "post-category text-white bg-primary mb-3";
                }

                if (x.Category.CategoryName == "KÜLTÜR & SANAT")
                {
                    color = "post-category text-white bg-danger mb-3";
                }

                if (x.Category.CategoryName == "TARİH")
                {
                    color = "post-category text-white bg-success mb-3";
                }

                if (x.Category.CategoryName == "SEYAHAT")
                {
                    color = "post-category text-white bg-dark mb-3";
                }

                <div class="col-lg-4 mb-4">
                    <div class="entry2">
                        <a href="single.html"><img src="@x.BlogImage" alt="Image" class="img-fluid rounded" style="height:250px;"></a>
                        <div class="excerpt">
                            <div class="d-flex justify-content-between">
                                <span class="@color">@x.Category.CategoryName</span>
                                <span>Puan : @x.BlogRating</span>
                            </div>
                          
                            <h2><a href="/Blog/BlogDetails/@x.BlogId"> @x.BlogTitle</a></h2>
                            <div class="post-meta align-items-center text-left clearfix">
                                <figure class="author-figure mb-0 mr-3 float-left"><img src="@x.Author.AuthorImage" alt="Image" class="img-fluid"></figure>
                                <span class="d-inline-block mt-1">By <a href="#">@x.Author.AuthorName</a></span>
                                <span>&nbsp; @Convert.ToDateTime(x.BlogDate).ToString("dd-MM-yyyy")</span>
                               
                            </div>

                            <p>@x.BlogContent.Substring(0, x.BlogContent.Substring(0,200).LastIndexOf(" "))...</p>
                            <p><a class="btn btn-primary" href="#">Read More</a></p>
                        </div>
                    </div>
                </div>
            }


        </div>
       
    </div>
</div>

@Html.PagedListPager((IPagedList)Model, page=>Url.Action("Index", new { page}))