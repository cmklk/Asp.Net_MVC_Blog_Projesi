@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "CategoryUpdate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 class="text-danger my-4">KATEGORİ GÜNCELLEME PANELİ</h2>

@using (Html.BeginForm("CategoryUpdate", "Category", FormMethod.Post))
{
    @Html.LabelFor(x => x.CategoryId)
    @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })


    <br />

    @Html.Label("KATEGORİ ADI")
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryName);
    <br />



    @Html.Label("KATEGORİ AÇIKLAMASI")
    @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryDescription);
    <br />
    <button class="btn btn-success">GÜNCELLE</button>
}
