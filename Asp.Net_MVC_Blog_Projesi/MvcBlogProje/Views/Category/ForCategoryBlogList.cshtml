@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewBag.Title = "ForCategoryBlogList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>KATEGORİ BLOG YAZILARI</h2>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <td>ID</td>
            <td>BLOG BAŞLIK</td>
            <td>BLOG IMAGE</td>
        </tr>
    </thead>

    <tbody>
        @foreach(var x in Model)
        {
            <tr>
                <td>@x.BlogId</td>
                <td>@x.BlogTitle</td>
                <td><img src="@x.BlogImage" style="height:100px; width:100px; border-radius:20px" /></td>
            </tr>
        }
    </tbody>
</table>