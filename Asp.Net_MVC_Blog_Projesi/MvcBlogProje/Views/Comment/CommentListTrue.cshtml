@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewBag.Title = "CommentListTrue";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/admin_yorum_liste_tasarım/style.css" />
    <link rel="stylesheet" href="~/admin_yorum_liste_tasarım/assets/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />

    <title>Document</title>
</head>
<body>
    <div class="container">
        <div class="row">
            @foreach (var x in Model)
            {
                <div class="col-md-12">
                    <div class="media g-mb-30 media-comment">
                        <div class="media-body u-shadow-v18 g-bg-secondary g-pa-30">
                            <div class="g-mb-15 d-flex align-items-center gap-3">
                                <img class="d-flex g-width-50 g-height-50 rounded-circle g-mt-3 g-mr-15"
                                     src="~/Admin_Template/images/layout_img/g6.jpg"
                                     alt="Image Description"
                                     style="border:3px solid #0094ff" />
                                <h5 class="h5 text-primary mb-0">@x.UserName :</h5>
                                <h5 class="text-dark mb-0">@x.Blog.BlogTitle</h5>
                                <h5 class=" fw-bold mb-0 badge bg-primary text-white">@Convert.ToDateTime(x.CommentDate).ToString("dd-MM-yyyy")</h5>
                            </div>

                            <p class="mt-3">
                                @x.CommentText
                            </p>
                            <a href="/Comment/CommentChangeStatusToFalse/@x.CommnetId" class="btn btn-danger">YORUMU KALDIR</a>
                        </div>
                        
                    </div>
                   
                </div>
            }

        </div>
    </div>
    <script src="~/admin_yorum_liste_tasarım/assets/js/bootstrap.bundle.min.js"></script>
</body>
</html>
