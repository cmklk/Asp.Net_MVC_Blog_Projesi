@model EntityLayer.Concrete.Admin
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/Admin_Login_Page_Blog/style.css" />
    <title>Document</title>
</head>
<body>
 

        <div class="container">
            <div class="login__content">
                <img src="https://assets.codepen.io/7773162/4kNYC.jpeg"
                     alt="login image"
                     class="login__img" />


                <form class="login__form" action="/Admin/AdminLogin" method="post">
                    <div>
                        <h1 class="login__title"><span>HOŞGELDİN</span> ADMİN</h1>
                        <p class="login__description">
                            Giriş yapmak için bilgilerinizi girin...
                        </p>
                    </div>

                    <div>
                        <div class="login__inputs">
                            <div>
                                <label for="" class="login__label">Kullanıcı Adı</label>
                                <input type="text"
                                       name="AdminUsername"
                                       placeholder="Kullanıcı adınızı girin..."
                                       required
                                       class="login__input" />
                            </div>

                            <div>
                                <label for="" class="login__label">Şifre</label>

                                <div class="login__box">
                                    <input type="password"
                                           placeholder="Şifrenizi girin..."
                                           required
                                           name="AdminPassword"
                                           class="login__input"
                                           id="input-pass" />
                                    <i class="ri-eye-off-line login__eye" id="input-icon"></i>
                                </div>
                            </div>
                        </div>



                        <div>
                            <div class="login__buttons">

                                <button class="login__button login__button-ghost">Giriş Yap</button>
                            </div>

                        </div>
                    </div>
                </form>


            </div>
        </div>
    

    <script src="~/Admin_Login_Page_Blog/main.js"></script>
</body>
</html>
