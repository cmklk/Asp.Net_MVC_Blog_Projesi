@model EntityLayer.Concrete.Blog
@{
    ViewBag.Title = "AddBlog";
    Layout = "~/Views/Shared/AuthorLayout.cshtml";
}
<h3 class="my-4">BLOG EKLEME PANELİ</h3>

@using (Html.BeginForm("AddBlog", "User", FormMethod.Post))
{

    <br />

    <div class="form-group">
        <label>BLOG BAŞLIK</label>
        @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })
    </div>

    <br />

    <div class="form-group">
        <label>BLOG RESİM</label>
        @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    </div>


    <div class="form-group">
        <label>KATEGORİ</label>
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.deger1, new { @class = "form-control" })
    </div>

    <br />


    <div class="form-group">
        <label>Tarih</label>
      <input type="date"  class="form-control" name="BlogDate" />
    </div>

    <br />


    <div class="form-group">
        <label>YAZAR</label>
        @Html.DropDownListFor(x => x.AuthorId, (List<SelectListItem>)ViewBag.deger2, new { @class = "form-control" })
    </div>

    <br />


    <div class="form-group">
        <label>BLOG İÇERİK</label>
        @Html.TextAreaFor(x => x.BlogContent, new { @class = "form-control", @rows = 12 })
    </div>

    <br />

    <div class="form-group">
        <label>BLOG PUAN</label>
        @Html.TextBoxFor(x => x.BlogRating, new { @class = "form-control" })
    </div>

    <button class="btn btn-success">BLOG BİLGİLERİNİ EKLE <i class="fa fa-save"></i></button>
}