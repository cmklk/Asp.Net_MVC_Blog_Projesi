@model EntityLayer.Concrete.Blog
@{
    ViewBag.Title = "UpdateBlog";
    Layout = "~/Views/Shared/AuthorLayout.cshtml";
}



@using (Html.BeginForm("UpdateBlog", "User", FormMethod.Post))
{
    <div class="form-group">
        <label>ID</label>
        @Html.TextBoxFor(x => x.BlogId, new { @class = "form-control" })
    </div>

    <br />

    <div class="form-group">
        <label>BLOG BAŞLIK</label>
        @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })
    </div>

    <br />

    <div class="form-group">
        <label>BLOG RESİM</label>
        @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    </div>

    <br />

    <div class="form-group">
        <label>BLOG İÇERİK</label>
        @Html.TextAreaFor(x => x.BlogContent, new { @class = "form-control", @rows = 12 })
    </div>

    <br />

    <div class="form-group">
        <label>BLOG PUAN</label>
        @Html.TextBoxFor(x => x.BlogRating, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>BLOG RESİM</label>
        @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    </div>


    <div class="form-group">
        <label>CATEGORY</label>
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.deger1, new { @class = "form-control" })
    </div>

  

    <button class="btn btn-success">BLOG BİLGİLERİNİ GÜNCELLE</button>
}